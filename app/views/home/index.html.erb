<div class="container">
  <div class="content">
    <% if user_signed_in? %>
      <%= redirect_to verses_path %>
    <% else %>
      <div class="container">
        <div class="nav navbar-nav navbar-right">
          <%= t ".language" %> <%= link_to_unless_current "English", locale: "en", :type => "button" %> | <%= link_to_unless_current "Polish", locale: "pl", :type => "button" %>
        </div>
      </div>
      <div class="hero-unit" id="hero">
        <h1>Scripture Saver |
          <small><%= t ".description" %></small></h1>
      </div>
      <div class="container">
        <div class="btn-group">
          <%= link_to "#{t "devise.sign_up"}", new_user_registration_path, :class => "btn btn-default btn-lg", :type => "button", :role => "register" %>
        </div>
        <div class="btn-group">
          <%= t ".or" %>
        </div>
        <div class="btn-group">
          <%= link_to "#{t "devise.sign_in"}", new_user_session_path, :class => "btn btn-default btn-lg", :type => "button", :role => "register" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
