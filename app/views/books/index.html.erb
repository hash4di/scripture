<div class="container">
  <h3><%= t "books.search_in_bible" %></h3>
  <table class="table table-hover table-condensed table-striped">
    <thead>
      <tr>
        <th><%= t "books.book" %></th>
      </tr>
    </thead>

    <tbody>
      <% Book::BOOKS.each do |id, name| %>
        <tr>
          <td><%= link_to name, books_path(id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

