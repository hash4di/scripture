<h1>Przeglądaj Biblię NWT</h1>

<%= form_tag script_index_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
    <%= link_to "Back", script_index_path %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Księga</th>
      <th>Rozdział</th>
      <th>Werset</th>
      <th colspan="3">Treść:</th>
    </tr>
  </thead>

  <tbody>
    <% @scripts.each do |text| %>
      <tr>
        <td><%= text.book_name(text.book.to_s) %></td>
        <td><%= text.chapter %></td>
        <td><%= text.line %></td>
        <td><%= text.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
