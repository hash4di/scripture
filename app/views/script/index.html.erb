<%= render 'header' %>

<div class="container">
  <h3>Choose book</h3>
  <div class="row">
    <div class="col-md-6">
      <table class="table table-hover table-condensed table-striped">
        <thead>
          <tr>
            <th>HEBREW SCRIPTURES</th>
          </tr>
        </thead>

        <tbody>
        <% Book::BOOKS.first(39).each do |id, name| %>
          <tr>
            <td><%= link_to name, book_path(id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <table class="table table-hover table-condensed table-striped">
        <thead>
          <tr>
            <th>GREEK SCRIPTURES</th>
          </tr>
        </thead>

        <tbody>
        <% Book::BOOKS.to_a.last(27).each do |id, name| %>
          <tr>
            <td><%= link_to name, book_path(id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

