<div class="container">
  <h2>Your Verses</h2>
</div>
<div class="container">
  <%= form_tag verses_path, :method => 'get', :role => 'search' do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], :class => 'form-control', :id => "search-bar", :placeholder => 'Search', :type=>"search" %>
    </div>
    <div class="btn-group">
      <%= button_tag(type:"submit", class:"btn btn-default", :name => nil) do %>
        <span class="glyphicon glyphicon-search"></span>
      <% end %>
      <%= link_to "Clear", verses_path, :class => 'btn btn-default'%>
      <%= link_to new_verse_path, :class => "btn btn-primary", :type => 'button' do %>
        <span class="glyphicon glyphicon-plus"></span>
        <span class="glyphicon glyphicon-font"></span>
      <% end %>
      <%= link_to script_index_path, :class => "btn btn-default", :type => 'button' do %>
        <span class="glyphicon glyphicon-book"></span>
      <% end %>
    </div>
  <% end %>
</div>
</br>
<div class="container">
  <table class="table table-hover table-condensed table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Label</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @verses.each do |verse| %>
        <tr>
          <td><%= link_to verse.title, edit_verse_path(verse) %></td>
          <td><%= verse.description %></td>
          <td><%= verse.label %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

