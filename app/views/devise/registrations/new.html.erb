<%= render "devise/shared/header" %>

<div class="container" id="flash-alerts">
  <%= devise_error_messages! %>
</div>

<h2><%= t "devise.sign_up"%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div><%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label "#{t "devise.password"}" %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label  "#{t "devise.password_confirmation"}" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.submit "#{t "devise.sign_up"}", :class => "btn btn-default navbar-btn" %></div>
<% end %>
